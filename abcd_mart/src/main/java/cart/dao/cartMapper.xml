<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cartSQL">
	<select id="orderAllList" resultType="cartDTO">
		select * from cartlist
	</select>
	
	<update id="shoesQtyText" parameterType="java.util.Map">
		update cartlist set shoesqty=#{shoesqty} where shoesbrand=#{shoesbrand} and shoesname=#{shoesname} and shoessize=#{shoessize}
	</update>
	
	<delete id="deleteList" parameterType="java.util.Map">
		delete cartlist where shoesbrand=#{shoesbrand} and shoesname=#{shoesname} and shoessize=#{shoessize}
	</delete>
	
	<insert id="insert_temporary_cartlist" parameterType="java.util.Map">
		insert into temporary_cartlist values(#{id}, #{prdtcode}, #{shoesimage}, #{shoesbrand}, #{shoesname}, #{shoescolor}, #{shoessize}, #{shoesprice}, #{shoesqty}, #{shoesdiscount}, #{shoespoint})
	</insert>
	
	<select id="temporary_cartlist" resultType="cartDTO">
		select * from temporary_cartlist
	</select>
	
	<delete id="delete_temporary_cartlist">
		delete from temporary_cartlist
	</delete>
	
	<delete id="select_deleteList">
		delete cartlist where shoesbrand=#{shoesbrand} and shoesname=#{shoesname} and shoessize=#{shoessize}
	</delete>
	
</mapper>